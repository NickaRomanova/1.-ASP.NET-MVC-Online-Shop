@model Shop_v2.Models.Category

@{
    ViewBag.Title = "Редактировать категорию";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<fieldset>

    <legend>Категория</legend>

    <h1> Редактирование категории  </h1>

    <h4>@ViewBag.Message</h4>

    @using (Html.BeginForm("EditCategory", "Admin", FormMethod.Post))
    {
        @Html.ValidationSummary(true)

        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.CategoryName)
            <br />
            @Html.EditorFor(m => m.CategoryName)
        </p>

        <div>
            @Html.ActionLink("Вернуться к настройкам категорий", "AllCategory", "Admin")
        </div>

        <p>
            <input type="submit" value="Сохранить" />
        </p>

    }

</fieldset>
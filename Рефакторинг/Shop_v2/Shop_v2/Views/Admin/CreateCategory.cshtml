@model Shop_v2.Models.Category

@{
    ViewBag.Title = "Добавить категорию";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Добавление новую категорию товаров </h1>

@Html.AntiForgeryToken()

<div class="editor-field">

    @using (Html.BeginForm("CreateCategory", "Admin", FormMethod.Post))
    {
        <fieldset>
            <h4>@ViewBag.Message</h4>
            <p>
                <div class="editor-label">
                    @Html.LabelFor(model => model.CategoryName)
                </div>

                <div class="editor-field">
                    @Html.EditorFor(model => model.CategoryName)
                    @Html.ValidationMessageFor(model => model.CategoryName)
                </div>
            </p>

            <div>
                @Html.ActionLink("Вернуться к настройкам категорий", "AllCategory", "Admin")
            </div>

            <p>
                <input type="submit" value="Добавить категорию" />
            </p>

        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
